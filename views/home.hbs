<!DOCTYPE html>
<html>

<head>
	<title>Playspot</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css"
		href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="stylesheets/style.css">
	<link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css"
		href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css">
</head>

<body>

	<div class="container-fluid">
		{{> contactheader}}
		{{> mainheader}}
		{{> menu}}

		<!-- NEW GAMES -->
		<div>
			<div class="mt-3 mb-3" style="padding: 0% 5%;">
				<div class="row">
					<div class="col-12">
						<h2 class="font-weight-bold">New Games</h2>
					</div>
				</div>
			</div>
			<div class="newgames-container">
				<div class="row newgames-row">
					{{#each newGames}}
					<div class="col-md-3 col-sm-6 col-12">
						<img src="{{this.image}}" class="img-fluid newgames-img">
						<h6 class="newgame-category">{{this.category}}</h6>
						<h6 class="newgame-name">{{this.name}}</h6>
						<button type="button" class="btn mt-2 cart-button">Add to Cart</button>
					</div>
					{{/each}}
				</div>
			</div>
		</div>

		<!-- PROMOTIONAL BANNER  -->
		<div class="promotional-banner-wrapper" style="margin-top: 20px;">
			<div class="row">
				<div class="col-12">
					<img src="images/promotional-banner.jpg">
				</div>
			</div>
		</div>

		{{> footer}}
		{{> creators}}

	</div>

	<!-- JQuery CDN's -->
	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
		crossorigin="anonymous"></script>
	<!-- Font Awesome CDN's -->
	<script type="text/javascript"
		src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/js/all.min.js"></script>
</body>

</html>