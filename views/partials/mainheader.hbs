<!-- MAIN HEADER -->
		<div class="main-header-container">
			<div class="row align-items-center">
				<div class="main-header-logo-div align-items-center col-lg-3 col-md-12 text-center d-flex">
					<img src="images/logo.png">
					<h2 class="ml-2" style="color: #ffffff"><span style="color: #d31737">P</span>lay<span style="color: #d31737">S</span>pot</h2>
				</div>
				<div class="main-header-search-bar-div col-lg-6 col-md-12 text-center">
					<form action="/searchgame" method="get">
						<input type="text" name="search" placeholder="Search Here">
						<input type="submit" class="search-btn" value="Search">
					</form>					
				</div>

				<div class="col-lg-3 col-md-12">
					{{#if sessionExists}}
						<div class="d-flex justify-content-end main-header-logo-div">
							<div class="main-header-cart-div">
								<i class="fas fa-cart-plus" style="color: #d10024"></i>
								<a href="/cart">Cart</a>
							</div>
							<div class="main-header-logout-div">
								<i class="fas fa-sign-out-alt" style="color: #d10024"></i>
									<a href="/logout">Logout</a>
							</div>
						</div>
					{{else}}
						<div class="d-flex justify-content-end main-header-logo-div">
							<div class="main-header-cart-div">
								<i class="fas fa-user-plus" style="color: #d10024"></i>
								<a href="/signup">Sign Up</a>
							</div>
							<div class="main-header-logout-div">
								<i class="fas fa-sign-in-alt" style="color: #d10024"></i>
								<a href="/login">Login</a>
							</div>
						</div>
					{{/if}}
				</div>
			</div>
		</div>